<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1" author="112seany">
        <createTable tableName="UserInformation">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="telegram_id" type="BIGINT"/>
            <column name="last_notify_time" type="timestamp with time zone"/>
            <column name="home_address" type="VARCHAR(255)"/>
            <column name="work_address" type="VARCHAR(255)"/>
            <column name="arrival_time" type="timestamp with time zone"/>
            <column name="home_lat" type="VARCHAR(64)"/>
            <column name="home_lon" type="VARCHAR(64)"/>
            <column name="work_lat" type="VARCHAR(64)"/>
            <column name="work_lon" type="VARCHAR(64)"/>
            <column name="timezone" type="VARCHAR(64)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
